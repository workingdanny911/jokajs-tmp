{
    "extends": "@tsconfig/node16/tsconfig.json",
    "compilerOptions": {
        "rootDir": "./",
        "baseUrl": ".",

        "outDir": "dist",
        "sourceMap": true,
        "declaration": true,

        "noImplicitAny": true,

        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,

        "paths": {
            "@joka/*": ["./src/*/index.ts"]
        }
    },

    "include": ["src"],
    "exclude": ["node_modules", "dist"],

    "ts-node": {
        "files": true
    }
}
