{
    "extends": "@tsconfig/node16/tsconfig.json",
    "compilerOptions": {
        "rootDir": "./",
        "baseUrl": ".",

        "outDir": "dist",
        "sourceMap": true,
        "declaration": true,

        "noImplicitAny": true,

        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,

        "paths": {
            "joka": ["./src/index.ts"],
            "joka/core": ["./src/core/index.ts"],
            "joka/dependency-injection": [
                "./src/dependency-injection/index.ts"
            ],
            "joka/event-sourcing": ["./src/event-sourcing/index.ts"],
            "joka/messaging": ["./src/messaging/index.ts"],

            "joka/utils": ["./src/utils.ts"],
            "joka/testing": ["./src/testing.ts"],
            "joka/config": ["./src/config.ts"]
        }
    },

    "include": ["src"],
    "exclude": ["node_modules", "dist", "tests"],

    "ts-node": {
        "files": true
    }
}
