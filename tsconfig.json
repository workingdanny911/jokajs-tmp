{
    "extends": "@tsconfig/node16/tsconfig.json",
    "compilerOptions": {
        "rootDir": "./",
        "baseUrl": ".",

        "outDir": "dist",
        "sourceMap": true,
        "declaration": true,

        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,

        "paths": {
            "joka": ["./src/index.ts"],
            "joka/*": ["./src/*.ts", "./src/*/index.ts"]
        }
    },

    "include": ["./src/**/*", "./tests/**/*"],
    "exclude": ["node_modules", "dist", "tests"],

    "ts-node": {
        "files": true
    }
}
